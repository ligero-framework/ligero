{
  "extends": "@docusaurus/tsconfig",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@site/*": ["./*"]
    },
    "allowJs": true,
    "checkJs": true
  },
  "include": [
    "src/**/*",
    "src/**/*.d.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    ".docusaurus",
    "build",
    "**/__tests__",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
